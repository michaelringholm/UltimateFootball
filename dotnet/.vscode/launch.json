{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebApp - Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web-app",
            "program": "${workspaceFolder}/web-app/bin/Debug/netcoreapp3.1/web-app.dll",
            "args": [],
            "cwd": "${workspaceFolder}/web-app/",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },        
        {
            "name": "Console - Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-console",
            "program": "${workspaceFolder}/console/bin/Debug/netcoreapp3.1/console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/console",
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },            
            "stopAtEntry": false
        }
    ]
}